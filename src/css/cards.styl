@import 'nib'

#cardTable {
    height: 300px;
    background: green;
    padding: 20px;
    overflow: hidden;
}

#deck {
    position: relative;

    -webkit-perspective: 800px;
    width: 100px;
    height: 145px;
    
    .card {
        width: 100%;
        height: 100%;
        position: absolute;

        -webkit-transform-style: preserve-3d;
        -moz-transform-style: preserve-3d;
        transition: all linear 0.1s;
        transform: rotateY(180deg);
    
        img {
            height: 100%;
            width: 100%;
        }
        
        figure {
            display: block;
            position absolute
            width 100%;
            height 100%;
            margin: 0;
            
            backface-visibility: hidden;
            
            background: white;
            border-radius: 7px;
            padding: 4px 2px;
            box-shadow: #111 0 0 2px;
        }
    
        figure.front {
        }
    
        figure.back {
            background: #777;
            transform: rotateY(180deg);
        }
    }
}